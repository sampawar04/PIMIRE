@{
    ViewData["title"] = "Edit Product Sub Category";
}
<div class="row">
    <!-- Basic with Icons -->
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h6 class="mb-0">Product</h6>
                <small class="text-muted float-end"><a asp-controller="Products" asp-action="GetProductSubCategories"><span class="mdi mdi-keyboard-backspace"></span>Go back</a></small>
            </div>
            <div class="card-body">

                <form id="form-sub-category" class="needs-validation" autocomplete="off" novalidate="">
                    <input type="hidden" id="hdnSubCategoryId" value="0" />
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="txtName">Name <span class="text-danger">*</span></label>
                        <div class="col-sm-4">
                            <div class="input-group input-group-merge">

                                <input type="text"
                                       class="form-control"
                                       id="txtName"
                                       aria-describedby="basic-icon-default-fullname2" />
                            </div>
                            <span class="error-message-name text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="ddlProductCategory">Product Category <span class="text-danger">*</span></label>
                        <div class="col-sm-4">
                            <select id="ddlProductCategory" onchange="ValidateForm()" class="form-select" required>
                                <option value=""> --Select-- </option>
                            </select>
                            <span class="error-message-product-category text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="txtDescription">Description</label>
                        <div class="col-sm-4">
                            <div class="input-group input-group-merge">

                                <textarea id="txtDescription"
                                          class="form-control"
                                          aria-describedby="txtDescription2"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="imgProduct">Image <span class="text-danger">*</span></label>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="file" onchange="ValidateForm()" class="form-control" id="imgProduct" />

                            </div>
                            <span class="error-message-image text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="txtPrice">Price</label>
                        <div class="col-sm-4">
                            <div class="input-group input-group-merge">

                                <input type="text"
                                       class="form-control"
                                       id="txtPrice"
                                       aria-describedby="basic-icon-default-fullname2" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="txtMfgDate">Mfg Date</label>
                        <div class="col-sm-4">
                            <input class="form-control" type="date" id="txtMfgDate" />
                        </div>
                    </div>
                       <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="chkIsActive">IsActive</label>
                        <div class="col-sm-4">
                            <div class="form-check mt-3">
                                <input class="form-check-input" type="checkbox" value="" id="chkIsActive" />
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="button" id="btnSave" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            getProductCategory();
            let searchParams = new URLSearchParams(window.location.search);
            let productSubCategoryId = searchParams.get('id');
            GetProductSubCategory(productSubCategoryId);

            $("#btnSave").click(function() {
                if (!ValidateForm())
                    return false;
                let form = new FormData();

                let SubCategoryDetail = {
                    "SubCategoryId": $("#hdnSubCategoryId").val(),
                    "Price": $("#txtPrice").val(),
                    "MfgDate": $("#txtMfgDate").val()
                }
                let formData = {
                    "Id": $("#hdnSubCategoryId").val(),
                    "CategoryId": $("#ddlProductCategory").val(),
                    "Title": $("#txtName").val(),
                    "Description": $("#txtDescription").val(),
                     "IsActive": $("#chkIsActive").prop('checked'),
                    "SubCategoryDetailViewModel": SubCategoryDetail
                }
                form.append("file", $('#imgProduct')[0].files[0]);
                form.append("subCategoryJSON", JSON.stringify(formData));
                $.ajax({
                    type: "POST",
                    url: "/Products/UpdateProductSubCategory",
                    data: form,
                    processData: false, // important
                    contentType: false, // important
                    beforeSend: function() {
                        ShowLoader();
                    },
                    success: function(response) {
                        if (response.statusCode > 0) {
                            ShowAlert("success", response.statusMessage);
                           
                        }
                        else {
                            ShowAlert("error", response.statusMessage);
                        }
                    },
                    error: function(error) {
                        console.log(error);
                        ShowAlert("error", error.responseText);
                    },
                    complete: function() {
                        HideLoader();
                    }
                })

            })
            $("#txtCategoryName").keyup(function() {
                ValidateForm();
            });
            $("#form-sub-category").find('input').keyup(function() {
                ValidateForm();
            });
        })        
        function ValidateForm() {
            let isValid = true;
            let name = $("#txtName").val().trim();
            let productCategory = $("#ddlProductCategory").val().trim();
            let images = $('#imgProduct')[0].files.length;

            if (name == '') {
                $(".error-message-name").text('Please enter the name');
                isValid = false;
            }
            else
                $(".error-message-name").text('');

            if (productCategory == '') {
                $(".error-message-product-category").text('Please select product category');
                isValid = false;
            }
            else
                $(".error-message-product-category").text('');

            //if (images == 0) {
            //    $(".error-message-image").text('Please upload image file');
            //    isValid = false;
            //}
            //else
            //    $(".error-message-image").text('');

            $.each($('#imgProduct')[0].files, function(index, value) {
                var ext = value.name.split('.').pop().toLowerCase();
                isValid = true;               
                if (value.size>0 && isValid && $.inArray(ext, ['png', 'jpg', 'jpeg']) == -1) {
                    $(".error-message-image").text('Please upload png, jpg or jpeg file!');
                    $('#imgProduct').val(null);
                    isValid = false;
                }
                if (!isValid)
                    return false;
            })
            return isValid;
        }
        function getProductCategory() {
            $.ajax({
                type: "GET",
                url: "/Products/GetProductCategoriesDropdown",
                beforeSend: function() {
                    ShowLoader();
                },
                success: function(response) {
                    if (response.statusCode = 200) {
                        let data = $.parseJSON(response.data);
                        var options = '<option value=""> --Select-- </option>';
                        $.each(data, function(index, value) {
                            options += '<option value="' + value.Value + '"> ' + value.Text + ' </option>';
                        })
                        $("#ddlProductCategory").html(options);
                    }
                },
                error: function(error) {
                    console.log(error);
                },
                complete: function() {
                    HideLoader();
                }
            })
        }
        function GetProductSubCategory(productSubCategoryId) {
            $.ajax({
                type: "GET",
                url: "/Products/GetProductSubCategory?id=" + productSubCategoryId,
                beforeSend: function() {
                    ShowLoader();
                },
                success: function(response) {
                    if (response.statusCode == 200) {
                        let productSubCategory = $.parseJSON(response.data);
                        $("#hdnSubCategoryId").val(productSubCategory.Id);
                        $("#txtPrice").val(productSubCategory.ProductSubCategoryDetail.Price);                        
                        $("#txtMfgDate").val(productSubCategory.ProductSubCategoryDetail.MfgDate.substring(0,10));
                        $("#ddlProductCategory").val(productSubCategory.CategoryId);
                        $("#txtName").val(productSubCategory.Title);
                        $("#txtDescription").val(productSubCategory.Description);
                         $("#chkIsActive").prop('checked', productSubCategory.IsActive);
                        //$('#imgProduct').val(null);
                    }
                    else {
                        ShowAlert("error", response.statusMessage);
                    }
                },
                error: function(error) {
                    console.log(error);
                },
                complete: function() {
                    HideLoader();
                }
            })
        }
    </script>
}